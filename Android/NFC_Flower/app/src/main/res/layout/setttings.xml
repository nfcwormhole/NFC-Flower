<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBEBEB"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/block_bg2">

        <TextView
            android:id="@+id/setting_humidity"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:paddingLeft="5dip"
            android:paddingTop="12dip"
            android:text="@string/settting_moisture" />

        <TextView
            android:id="@+id/humidity_text_display"
            android:layout_width="wrap_content"
            android:layout_height="44dip"
            android:layout_toRightOf="@id/setting_humidity"
            android:paddingLeft="5dip"
            android:paddingTop="12dip"
            android:text="50%" />

        <View
            android:id="@+id/split_textview1"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_below="@id/setting_humidity"
            android:background="#ffc8cfda" />

        <SeekBar
            android:id="@+id/humidity_seekbar"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/split_textview1"
            android:layout_marginBottom="5dip"
            android:layout_marginTop="5dip"
            android:max="100"
            android:progress="50" />
    </RelativeLayout>

    <Button
        android:id="@+id/wather_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="130dip"
        android:text="@string/settting_write_tag" />

</RelativeLayout>